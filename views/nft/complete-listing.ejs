<div class="text-white">
    <h6 class="font-bold text-[20px]">Choose a type of sale</h6>
    <div class="mt-4">
        <div class="flex items-center mb-2 type-of-sale-item">
            <input id="default-radio-1" type="radio" value="" name="default-radio"
                class="w-4 h-4 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2 mr-2">
            <label for="default-radio-1" class="ms-2 text-sm font-medium w-full">
                <div>
                    <h6 class="text-[20px]">Fixed price</h6>
                    <p>The item is listed of the price you set</p>
                </div>
            </label>
        </div>
        <div class="flex items-center type-of-sale-item">
            <input checked id="default-radio-2" type="radio" value="" name="default-radio"
                class="w-4 h-4 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2 mr-2">
            <label for="default-radio-2" class="ms-2 text-sm font-medium w-full">
                <div>
                    <h6 class="text-[20px]">Auction price</h6>
                    <p>The item is listed for auction</p>
                </div>
            </label>
        </div>
    </div>
</div>
<div class="mt-8">
    <h6 class="font-bold text-[20px]">Set a price</h6>
    <div class="mt-4 flex gap-2">
        <div class="text-center set-price-item w-full">
            <span class="font-bold text-[20px]">Floor</span>
            <br />
            <span>3,000 MATIC</span>
        </div>
        <div class="text-center set-price-item w-full">
            <span class="font-bold text-[20px]">Floor</span>
            <br />
            <span>3,000 MATIC</span>
        </div>
    </div>
    <div class="mt-4 amount flex gap-2">
        <div class="w-full flex justify-between">
            <span class="font-bold">Amount</span>
            <input class="w-[350px]" />
        </div>
        <div>
            MATIC
        </div>
    </div>
</div>
<div class="mt-8 flex items-center gap-4 justify-between duration">
    <h6 class="font-bold text-[20px]">Duration</h6>

    <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown"
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center justify-between button-duration"
        type="button">3 months <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="m1 1 4 4 4-4" />
        </svg>
    </button>

    <!-- Dropdown menu -->
    <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
        <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
            <li>
                <a href="#"
                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">6 months</a>
            </li>
            <li>
                <a href="#"
                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">12 months</a>
            </li>
        </ul>
    </div>

</div>

<div class="mt-8">
    <h6 class="font-bold text-[20px]">Summary</h6>
    <div class="mt-4">
        <div class="flex justify-between mb-2">
            <span>Listing price</span>
            <span>3,000 MATIC</span>
        </div>
        <div class="flex justify-between mb-2">
            <span>Polysport fee</span>
            <span>3,0%</span>
        </div>
        <div class="flex justify-between mb-2">
            <span>Creator earnings</span>
            <span>0%</span>
        </div>
        <div class="flex justify-between">
            <span>Total potential earnings</span>
            <span>3,000 MATIC</span>
        </div>
    </div>
</div>
<div class="flex justify-center mt-8">
    <button class="w-full">Complete listing</button>
</div>